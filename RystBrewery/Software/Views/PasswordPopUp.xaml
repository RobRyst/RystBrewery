<Window x:Class="RystBrewery.Software.Views.PasswordPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Enter password:" />
        <PasswordBox x:Name="PasswordInput" Margin="0,5,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="Enter_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>