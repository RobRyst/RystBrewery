<Window x:Class="RystBrewery.Software.Views.PasswordPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#222222"
        Foreground="White">

    <StackPanel Margin="20">
        <TextBlock Text="Enter password:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <PasswordBox x:Name="PasswordInput"
                     Margin="0,0,0,16"
                     Background="White"
                     Foreground="Black"
                     BorderBrush="#475569"
                     BorderThickness="1"
                     Padding="6"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right" >
            <Button Content="OK"
                    Width="75"
                    Margin="0,0,20,0"
                    Click="Enter_Click"
                    Background="#10B981"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Padding="6"/>
            <Button Content="Cancel"
                    Width="75"
                    Click="Cancel_Click"
                    Background="#EF4444"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Padding="6"/>
        </StackPanel>
    </StackPanel>
</Window>
