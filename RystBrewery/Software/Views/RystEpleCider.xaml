<UserControl x:Class="RystBrewery.Software.Views.RystEpleCider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Ryst Eplecider - Velg program:" FontSize="16" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding BrewingProgramOptions}" SelectedItem="{Binding SelectedBrewingProgram}" Width="150"/>
            <ComboBox ItemsSource="{Binding WashingProgramOptions}" SelectedItem="{Binding SelectedWashingProgram}" Width="150" Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Start Brewing" Click="Start_Brewing_Click" IsEnabled="{Binding CanStartBrewing}" Margin="0,0,5,0"/>
                <Button Content="Start Washing" Click="Start_Washing_Click" Margin="0,0,5,0"/>
                <Button Content="Pause" Click="Pause_Click" Margin="0,0,5,0"/>
                <Button Content="Stop" Click="Stop_Click"/>
            </StackPanel>

            <Ellipse x:Name="StatusLight" Width="20" Height="20" Fill="Gray" Margin="0,10,0,10"/>
            <lvc:CartesianChart Series="{Binding TemperatureSeries}" LegendPosition="Right" Height="200"/>
        </StackPanel>
    </Grid>
</UserControl>
